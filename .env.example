# SQL Server Connection Settings
SQL_USERNAME=your_sql_username
SQL_PASSWORD=your_sql_password
SQL_TRUSTED_CONNECTION=yes
SQL_DRIVER=ODBC Driver 17 for SQL Server

# Performance Settings
NIGHT_MODE_DELAY=30
MAX_PARALLEL_QUERIES=2
QUERY_TIMEOUT=300
CONNECTION_TIMEOUT=30

# Report Settings
OUTPUT_DIRECTORY=./reports
INCLUDE_CHARTS=true
CHART_DPI=300

# Scheduling Settings
SCHEDULE_ENABLED=false
SCHEDULE_TIME=02:00
SCHEDULE_DAYS=1,2,3,4,5

# Analysis Settings
MIN_INDEX_SIZE_MB=100
MAX_FRAGMENTATION_THRESHOLD=30
MIN_MISSING_INDEX_IMPACT=10000
PLAN_CACHE_ANALYSIS_HOURS=24

# =====================================
# AVANCERET INDEX ANALYSE INDSTILLINGER
# =====================================

# Minimum fordel for missing indexes (standard: 80)
INDEX_MIN_ADVANTAGE=80

# Beregn selectability (kan være langsom) (standard: false)
INDEX_CALCULATE_SELECTABILITY=false

# Kun index analyse (ikke overlapping/unused) (standard: true)
INDEX_ONLY_ANALYSIS=true

# Begræns analyse til specifik tabel (tomt = alle tabeller)
INDEX_LIMIT_TO_TABLE=

# Begræns analyse til specifik index (tomt = alle indexes)
INDEX_LIMIT_TO_INDEX=

# =====================================
# AI INTEGRATION INDSTILLINGER
# =====================================
BE_MY_COPILOT=false
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_DEPLOYMENT=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MODEL=gpt-4
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3